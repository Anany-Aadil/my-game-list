generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
  // output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id Int @id //From IGDB
  name String
  cover String?
  year Int?

  userGame UserGame[]
}

model UserGame {
  id Int @id @default(autoincrement())

  userId String
  gameId Int
  status Status
  score String?
  platforms String[]
  chosenPlatforms String[]
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
  
}

model User {
  id String @id @default(cuid())
  name String?
  userName String? @unique
  email String? @unique
  emailVerified DateTime?
  image String?

  accounts Account[]
  sessions Session[]
  games UserGame[]
}

model Account{
  id String @id @default(cuid())
  userId String
  type String
  provider String
  providerAccountId String

  refresh_token String?
  access_token String?
  expires_at Int?
  token_type String?
  scope String?
  id_token String?
  sessionState String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session{
  id String @id @default(cuid())
  sessionToken String @unique
  userId String
  expires DateTime
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Status {
  CURRENTLY_PLAYING
  ON_HOLD
  COMPLETED
  DROPPED
  PLAN_TO_PLAY
}
